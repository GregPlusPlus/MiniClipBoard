QWidget {
    background: qlineargradient(x1: 0, y1: 1, x2: 0, y2: 0,
    stop: 0     #262F3A,
    stop: 1     #313D4A);
    color: #D1DBE6;
}

QSizeGrip {
    background: #212930;
    image: url(':/ui-images/size_grip');
}

QLabel {
        background-color: transparent;
}

QPushButton {
    /*border: 1px solid #A9B7C7;*/
    /*background-color: #626D78;
    border-bottom-width: 4px;
    border-bottom-color: #242D36;
    border-bottom-style: solid;*/

    padding: 5px;
    /*background-color: #212930;*/
    background: qlineargradient(x1: 0, y1: 1, x2: 0, y2: 0,
        stop: 0     #1A2126,
        stop: .1    #212930,
        stop: .9    #28333A,
        stop: 1     #3F4F5B);
    border: 1px solid #19232D;
    selection-background-color: #627182;
    border-radius: 3px;
}

QPushButton:focus {
/*    outline: 1px solid rgba(200, 200, 200, .4);*/
}

QPushButton:flat {
    background-color: none;
    border: none;
}

QPushButton:flat:hover {
    background-color: none;
    border: none;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 1, x2: 0, y2: 0,
        stop: 0     #1A2126,
        stop: 0.1   #212930,
        stop: 1     #28333A);
}

QPushButton:flat:pressed {
    background-color: none;
    border: none;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 1, x2: 0, y2: 0,
    stop: 0     #28333A,
    stop: 0.1   #28333A,
    stop: 1     #212930);
}

QPushButton:disabled {
    background: qlineargradient(x1: 0, y1: 1, x2: 0, y2: 0,
    stop: 0     #34393D,
    stop: .1    #3B4349,
    stop: .9    #56595B,
    stop: 1     #545556);
}

QPushButton:flat:disabled {
    background: none;
}

