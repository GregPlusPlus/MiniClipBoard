QStatusBar {
    background-color: #4B5D70;
}

QStatusBar::item {
    border: none;
}

QMenuBar {
    background-color: #212930;
}

QMenuBar::item {
    spacing: 2px;
    padding: 3px 5px;
    background: transparent;
}

QMenuBar::item:selected {
    background: #3F556E;
}

QMenuBar::item:pressed {
    background: #313D4A;
}

QMenu {
    background: qlineargradient(x1: 0, y1: 1, x2: 0, y2: 0,
    stop: 0     #27323D,
    stop: 1     #313D4A);
    color: #D1DBE6;
    margin: 0px;
    border-left-width: 4px;
    border-left-color: rgba(141, 163, 186, .5);
    border-left-style: solid;
}

QMenu:disabled {
    color: #81888E;
}

QMenu::item {
    background-color: transparent;
    padding: 2px 25px 2px 20px;
    border: 1px solid transparent;
    padding-left: 40px;
}

QMenu::item:selected {
    background-color: #465668;
}

QMenu::icon {
    background: transparent;
    border: none;
    position: absolute;
    top: 1px;
    right: 1px;
    bottom: 1px;
    left: 5px;
}

QMenu::indicator {
    padding-left: 10px;
    width: 16px;
    height: 16px;
}

QMenu::indicator:exclusive:unchecked {
    image: url(:/ui-images/exclusive_unchecked);
}

QMenu::indicator:exclusive:unchecked:selected {
    image: url(:/ui-images/exclusive_unchecked);
}

QMenu::indicator:exclusive:checked {
    image: url(:/ui-images/exclusive_checked);
}

QMenu::indicator:exclusive:checked:selected {
    image: url(:/ui-images/exclusive_checked);
}

QMenu::separator {
    height: 2px;
    background: rgba(141, 163, 186, .5);
    margin-left: 10px;
    margin-right: 5px;
}

